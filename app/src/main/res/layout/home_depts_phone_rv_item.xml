<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_home_depts_phone"
   android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_home_depts_person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        tools:text="@string/home_project_person_content"
        android:maxLines="3"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_home_depts_person_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:textSize="13sp"
            android:textColor="@color/colorPrimary"
            android:drawableLeft="@mipmap/phone"
            android:focusable="true"
            tools:ignore="RtlHardcoded,SmallSp,UseCompatTextViewDrawableXml" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_home_depts_person_phone2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:textSize="13sp"
            android:textColor="@color/colorPrimary"
            android:drawableLeft="@mipmap/phone"
            android:focusable="true"
            tools:ignore="RtlHardcoded,SmallSp,UseCompatTextViewDrawableXml" />
    </LinearLayout>

</RelativeLayout>